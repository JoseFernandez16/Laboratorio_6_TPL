        font_size:40
        pos:(0,400)
        size_hint:(1,.25)
    Label:
        id:num1
        text:''
        font_size:50
        pos:(100,250)
        size_hint:(.1,.15)
    Label:
        text:'+'
        font_size:50
        pos:(200,250)
        size_hint:(.1,.15)
